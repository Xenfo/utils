{
  "name": "@utils/api",
  "version": "1.0.1",
  "description": "Utilities for doing various annoying tasks",
  "repository": "https://github.com/Xenfo/utils.git",
  "author": "Samuel Corsi-House <chouse.samuel@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf ../../dist/api && nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ../../dist/api/main",
    "test": "run r:jest --passWithNoTests",
    "lint": "run lint:eslint && run lint:prettier",
    "lint:report": "run lint:eslint --output-file ../../eslint-report.json --format json && run lint:prettier",
    "lint:eslint": "run r:eslint --ignore-path ../../.gitignore \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:prettier": "run r:prettier --write --ignore-path ../../.gitignore .",
    "test:watch": "run r:jest --watch",
    "test:cov": "run r:jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "run r:jest --config ./test/jest-e2e.json",
    "services:up": "docker-compose -f docker/docker-compose.yml --env .env up -d",
    "services:down": "docker-compose -f docker/docker-compose.yml --env .env down"
  },
  "dependencies": {
    "@nestjs/common": "^8.3.1",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.3.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-fastify": "^8.3.1",
    "aws-sdk": "^2.1082.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "fastify": "^3.27.2",
    "fastify-helmet": "^7.0.1",
    "fastify-static": "^4.5.0",
    "ioredis": "^5.0.0",
    "lodash.escaperegexp": "^4.1.2",
    "point-of-view": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.1",
    "@nestjs/schematics": "^8.0.7",
    "@nestjs/testing": "^8.3.1",
    "@types/ioredis": "^4.28.8",
    "@types/lodash.escaperegexp": "^4.1.6",
    "@types/supertest": "^2.0.11",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-jest": "^28.0.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^4.0.0",
    "webpack": "^5.69.1"
  },
  "jest": {
    "displayName": "api",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "../../../coverage/api",
    "testEnvironment": "node"
  }
}
