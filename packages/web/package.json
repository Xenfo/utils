{
  "name": "@utils/web",
  "version": "1.0.1",
  "description": "Utilities for doing various annoying tasks",
  "repository": "https://github.com/Xenfo/utils.git",
  "author": "Samuel Corsi-House <chouse.samuel@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development run-p css:watch next:dev",
    "build": "NODE_ENV=production run-s css:build next:build",
    "start": "next start",
    "next:dev": "next dev",
    "next:build": "next build",
    "css:watch": "tailwindcss -w -c tailwind.config.js -o src/styles/tailwind.css",
    "css:build": "tailwindcss -m -c tailwind.config.js -o src/styles/tailwind.css",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "next lint --fix --ignore-path ../../.gitignore",
    "lint:prettier": "prettier --write --ignore-path ../../.gitignore ."
  },
  "dependencies": {
    "next": "12.0.2",
    "next-seo": "^4.28.1",
    "nprogress": "^0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sharp": "^0.29.2"
  },
  "devDependencies": {
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.34",
    "autoprefixer": "^10.4.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "12.0.2",
    "lodash.merge": "^4.6.2",
    "postcss": "^8.3.11",
    "prettier-plugin-tailwind": "^2.2.12",
    "tailwindcss": "^2.2.19"
  }
}
