{
  "name": "utils",
  "version": "1.0.1",
  "description": "Utilities for doing various annoying tasks",
  "repository": "https://github.com/Xenfo/utils.git",
  "author": "Samuel Corsi-House <chouse.samuel@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "is-ci || husky install",
    "update": "node scripts/updateDeps.js",
    "commit": "cz",
    "r:tsc": "cd $INIT_CWD && tsc",
    "r:eslint": "cd $INIT_CWD && eslint",
    "r:prettier": "cd $INIT_CWD && prettier",
    "r:jest": "cd $INIT_CWD && jest"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/cz-commitlint": "^16.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "commitizen": "^4.2.4",
    "doctoc": "^2.1.0",
    "eslint": "^8.10.0",
    "eslint-config-marine": "^9.3.2",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "globby": "^13.1.1",
    "husky": "^8.0.0",
    "inquirer": "^8.2.0",
    "is-ci": "^3.0.1",
    "jest": "^28.0.0",
    "lint-staged": "^12.3.4",
    "npm-check-updates": "^12.4.0",
    "ora": "^6.1.0",
    "prettier": "^2.5.1",
    "shelljs": "^0.8.5",
    "typescript": "^4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "packageManager": "yarn@3.2.1"
}
